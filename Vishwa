import java.util.Scanner;

public class spammail {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        String[] spamKeywords = {
            "win", "lottery", "prize", "free", "money", 
            "click here", "urgent", "offer", "credit card", "claim"
        };

        System.out.println("Enter the email content:");
        String email = sc.nextLine().toLowerCase(); // Convert to lowercase for easy matching

        boolean isSpam = false;
        for (String keyword : spamKeywords) {
            if (email.contains(keyword)) {
                isSpam = true;
                break; // No need to check further
            }
        }

        if (isSpam) {
            System.out.println("⚠ This email is likely SPAM.");
        } else {
            System.out.println("✔ This email seems safe.");
        }

        sc.close();
    }
}
